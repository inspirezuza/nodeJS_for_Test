				{
					"name": "login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"let response = pm.response.json();\r",
									"\r",
									"if (response.data.tokens) {\r",
									"    pm.environment.set(\"access_token\", response.data.tokens.accessToken);\r",
									"    pm.environment.set(\"refresh_token\", response.data.tokens.refreshToken);\r",
									"\r",
									"    console.log(\"access token set:\", response.data.tokens.accessToken);\r",
									"    console.log(\"refresh token set:\", response.data.tokens.refreshToken);\r",
									"} else {\r",
									"    console.log(\"Failed to extract access token\");1\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "device-fingerprint",
								"value": "{{device-fingerprint}}",
								"type": "text"
							},
							{
								"key": "businessid",
								"value": "{{businessid}}",
								"type": "text"
							},
							{
